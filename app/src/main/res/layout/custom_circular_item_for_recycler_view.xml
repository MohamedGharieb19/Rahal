<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/circular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_circle_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/museums"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular" />

    <TextView
        android:id="@+id/circle_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:maxLines="2"
        android:text="Museums"
        android:textColor="#8F9090"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/image_circle_id"
        app:layout_constraintStart_toStartOf="@id/image_circle_id"
        app:layout_constraintTop_toBottomOf="@id/image_circle_id" />
</androidx.constraintlayout.widget.ConstraintLayout>